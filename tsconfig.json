{

    "compilerOptions": {
        "allowJs": false,
        "sourceMap": true,
        "sourceRoot": "./src/",
        "outDir": "./dist",
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2016",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "typeRoots" : [
            "./node_modules/@types",
            "./typings/"
        ],

        "lib": [
            "es5",
            "es6",
            "es7",
            "dom",
            "scripthost",
            "es2015.core",
            "es2015.collection",
            "es2015.symbol"
        ]
    },

    "exclude": [
        "node_modules"
    ]
}
