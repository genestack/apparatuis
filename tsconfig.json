{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "typeRoots": ["./node_modules/@types", "./typings/"],
    "types": ["jest", "node"],
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  }
}
